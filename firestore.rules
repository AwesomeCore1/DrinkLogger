rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    function isAdmin() {
      return request.auth != null && request.auth.token.admin == true;
    }

    // Public read access for logs (for the public dashboard)
    match /logs/{logId} {
      allow read: if true;
      allow create, delete: if isAdmin();
      // Allow admins to update anything, OR allow public to update ONLY the 'reactions' field
      allow update: if isAdmin() || (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['reactions']));
    }
    
    // Public read access for categories (for the public dashboard)
    match /categories/{categoryId} {
      allow read: if true;
      // Only admins can write/delete categories
      allow write: if isAdmin();
    }
  }
}
